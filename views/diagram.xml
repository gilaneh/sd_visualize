<odoo>
    <data>
        <!-- ==================================================  sd_visualize.diagram VIEW ====================-->

        <record model="ir.ui.view" id="sd_visualize_diagram_view_list">
            <field name="name">Diagram</field>
            <field name="model">sd_visualize.diagram</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project"/>
<!--                    <field name="image" widget="visualize_image" options="{'size': [90, 90]}"/>-->
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sd_visualize_diagram_view_form">
            <field name="name">Diagram New</field>
            <field name="model">sd_visualize.diagram</field>
            <field name="arch" type="xml">
                <form js_class="visualize_diagram_view">
                    <div class="text-center">
                        <div class="start_date_field o_datepicker o_field_widget"></div>
                        <div name="print_pdf" class="btn btn-success mx-2 btn_print_pdf"
                             data-toggle="tooltip" data-placement="top" title="">
                            <i class="fa fa-camera"></i>
                        </div>

                    </div>
                    <div class="text-center">
                        <field name="image" widget="image" class="diagram_image m-0 p-0"/>
                    </div>
                    <field name="values" invisible="1" domain="[('display', '=', True)]"/>
                    <field name="function_name" invisible="1"/>
                </form>
            </field>
        </record>
        <!-- ==================================================  sd_visualize.diagram EDIT ====================-->

        <record model="ir.ui.view" id="sd_visualize_diagram_list">
            <field name="name">Diagram</field>
            <field name="model">sd_visualize.diagram</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project"/>
                    <field name="image" widget="visualize_image" options="{'size': [90, 90]}"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sd_visualize_diagram_form_new">
            <field name="name">Diagram New</field>
            <field name="model">sd_visualize.diagram</field>
            <field name="arch" type="xml">
                <form js_class="visualize_process">
                    <group>
                        <group>
                            <field name="update" invisible="1"/>
                            <field name="name"/>
                            <field name="project"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

